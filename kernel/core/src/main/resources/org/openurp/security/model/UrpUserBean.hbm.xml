<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="org.openurp.security.model"
  default-access="org.beangle.data.jpa.hibernate.PropertyAccessor">

  <class name="UrpUserBean" entity-name="org.beangle.security.blueprint.User">
    <id name="id" unsaved-value="null" type="long">
      <generator class="auto_increment" />
    </id>
    <property name="code" length="30" unique="true" not-null="true" />
    <property name="locked" not-null="true" />
    <property name="enabled" not-null="true" />
    <property name="remark" length="100" />
    <property name="beginOn" />
    <property name="endOn" />
    <property name="password" not-null="true" />
    <property name="passwordExpiredOn" />
    <many-to-one name="person" not-null="true" />
    <bag name="members" collection-type="seq" cascade="all">
      <key column="user_id" />
      <one-to-many class="Member" />
    </bag>
    <bag name="profiles" collection-type="seq" cascade="all">
      <key column="user_id" />
      <one-to-many class="UserProfileBean" />
    </bag>
  </class>
</hibernate-mapping>