<?xml version="1.0" encoding="UTF-8"?>
<hibernate-mapping xmlns="http://www.hibernate.org/xsd/hibernate-mapping"
  xsi:schemaLocation="http://www.hibernate.org/xsd/hibernate-mapping classpath://org/hibernate/hibernate-mapping-4.0.xsd"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" package="org.openurp.app.model"
  default-access="org.beangle.data.jpa.hibernate.PropertyAccessor">

  <class name="AppBean" entity-name="org.openurp.app.App">
    <cache usage="read-write" />
    <id name="id" unsaved-value="null" type="integer">
      <generator class="auto_increment" />
    </id>
    <property name="name" unique="true" length="100" not-null="true" />
    <property name="title"  length="100" not-null="true" />
    <property name="secret" length="200" not-null="true" />
    <property name="url" length="200" not-null="true" />
    <property name="appType" length="50" not-null="true" />
    <property name="remark" />
    <bag name="datasources" collection-type="seq" inverse="true" cascade="all,delete-orphan">
      <key column="app_id"/>
      <one-to-many class="org.openurp.app.model.DataSourceBean" />
    </bag>
  </class>

</hibernate-mapping>