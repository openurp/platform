<?xml version="1.0" encoding="UTF-8"?>
<hibernate-mapping xmlns="http://www.hibernate.org/xsd/hibernate-mapping"
  xsi:schemaLocation="http://www.hibernate.org/xsd/hibernate-mapping classpath://org/hibernate/hibernate-mapping-4.0.xsd"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" package="org.openurp.app.func.model"
  default-access="org.beangle.data.jpa.hibernate.PropertyAccessor">

  <typedef name="scope" class="org.beangle.data.jpa.hibernate.udt.EnumType">
    <param name="enumClass">org.beangle.security.blueprint.Scope</param>
  </typedef>
  
  <class name="FuncResourceBean" entity-name="org.openurp.app.func.FuncResource">
    <id name="id" type="integer">
      <generator class="date" />
    </id>
    <property name="name" not-null="true" length="200"/>
    <many-to-one name="app" not-null="true"/>
    <property name="scope" type="scope"/>
    <property name="title" not-null="true" length="200"/>
    <property name="enabled" not-null="true"/>
    <property name="actions"/>
    <property name="remark" length="200"/>
  </class>


</hibernate-mapping>