<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="org.openurp.kernel.app.func.model"
  default-access="org.beangle.data.jpa.hibernate.PropertyAccessor">

  <class name="MenuBean" entity-name="org.openurp.kernel.app.func.Menu">
    <id name="id" type="integer">
      <generator class="auto_increment" />
    </id>
    <many-to-one name="profile" not-null="true" />
    <property name="name" not-null="true" length="100" />
    <property name="title" not-null="true" length="100" />
    <many-to-one name="entry" />
    <property name="indexno" length="50" />
    <many-to-one name="parent" class="org.openurp.kernel.app.func.Menu" />
    <set name="resources" collection-type="set">
      <key column="menu_id" />
      <many-to-many column="resource_id"
        class="org.openurp.kernel.app.func.FuncResource" />
    </set>
    <bag name="children" collection-type="seq" cascade="all,delete-orphan" order-by="indexno">
      <key column="parent_id" />
      <one-to-many class="org.openurp.kernel.app.func.Menu" />
    </bag>
    <property name="enabled" not-null="true" />
    <property name="params" length="200" />
    <property name="remark" length="100" />
  </class>

</hibernate-mapping>