<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="org.openurp.kernel.security.model" default-access="org.beangle.data.jpa.hibernate.PropertyAccessor">

  <class name="FuncPermissionBean" abstract="true" entity-name="org.beangle.security.blueprint.FuncPermission">
    <id name="id" type="integer">
      <generator class="auto_increment" />
    </id>
    <many-to-one name="role" not-null="true"/>
    <many-to-one name="resource" not-null="true" />
    <property name="actions"/>
    <property name="restrictions"/>
    <property name="remark"/>
  </class>

</hibernate-mapping>