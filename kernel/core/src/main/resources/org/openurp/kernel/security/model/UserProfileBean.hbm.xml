<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
  "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="org.openurp.kernel.security.model"
  default-access="org.beangle.data.jpa.hibernate.PropertyAccessor">

  <class name="UserProfileBean">
    <id name="id" unsaved-value="null" type="long">
      <generator class="auto_increment" />
    </id>
    <many-to-one name="user" not-null="true" />
    <map name="properties" collection-type="map" cascade="all,delete-orphan">
      <key column="profile_id" />
      <map-key-many-to-many column="field_id"
        class="org.beangle.security.blueprint.Field" />
      <element column="value_id" type="string" length="2000" />
    </map>
  </class>
</hibernate-mapping>