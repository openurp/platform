<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

  <bean id="web.Interceptor.security">
    <constructor-arg>
      <list>
        <ref bean="security.Filter.appPreauth" />
        <ref bean="security.Filter.authorization" />
      </list>
    </constructor-arg>
    <constructor-arg value="?" />
    <constructor-arg value="?" />
    <constructor-arg value="?" />
  </bean>

  <bean id="security.SessionIdPolicy.default">
    <property name="sessionIdParam" value="access_token" />
  </bean>

  <bean id="security.Authenticator.realm">
    <constructor-arg>
      <list>
        <ref bean="security.Realm.remoteApp" />
      </list>
    </constructor-arg>
  </bean>
</beans>
